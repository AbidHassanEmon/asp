
@{
    ViewBag.Title = "OTP";
}
@if (TempData["Msg"] != null)
{
    <span class="text-danger">@TempData["Msg"]</span>
}
<h2>OTP SUBMIT AND CHANGE PASSWORD</h2>

<form action="" method="post">

    <input type="hidden" name="Id" value="@ViewBag.Id" class="form-control" /><br />

    OTP: <input type="text" name="OTP" class="form-control" />
    @Html.ValidationMessage("OTP", new { @class = "text-danger" })<br />

    Password: <input type="text" name="Password" class="form-control" />
    @Html.ValidationMessage("Password", new { @class = "text-danger" })<br>

    Retype Password: <input type="text" name="NPassword" class="form-control" />
    @Html.ValidationMessage("NPassword", new { @class = "text-danger" })<br>

    <input type="submit" class="btn btn-success" />

</form>

<br />
<a href="/Mail/Index">Resend OTP</a>