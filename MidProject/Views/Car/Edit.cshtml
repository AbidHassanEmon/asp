
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Car</h2>

<form action="" method="post">
    Name: <input type="text" name="Name" value="@Model.Name" class="form-control" />
    @Html.ValidationMessage("Name", new { @class = "text-danger" })<br />

    Model: <input type="text" name="Model" value="@Model.Model" class="form-control" />
    @Html.ValidationMessage("Model", new { @class = "text-danger" })<br>

    Regristration Year: <input type="text" value="@Model.Reg_year" name="Reg_year" class="form-control" />
    @Html.ValidationMessage("Reg_year", new { @class = "text-danger" })<br />

    Mileage: <input type="text" name="Mileage" value="@Model.Mileage" class="form-control" />
    @Html.ValidationMessage("Mileage", new { @class = "text-danger" })<br />

    Rent: <input type="text" name="Rent" value="@Model.Rent" class="form-control" />
    @Html.ValidationMessage("Rent", new { @class = "text-danger" })<br />

    Description:<input type="text" name="Description" value="@Model.Description" rows="4" cols="50" class="form-control" />
    @Html.ValidationMessage("Description", new { @class = "text-danger" })<br>

    <input type="submit" class="btn btn-success" />
</form>